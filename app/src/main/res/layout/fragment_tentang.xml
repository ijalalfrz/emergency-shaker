<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".UIFragment.TentangFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/section_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin"
        >

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_logo"
            />

        <TextView
            android:textColor="@color/colorSecondary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="EMERGENCY SHAKER"
            android:textSize="24sp" />





        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_deskripsi"
            android:text="@string/tentang"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
          />



    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/section_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:background="@color/colorSoft"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>

        <android.support.v7.widget.AppCompatButton

            android:textColor="@color/colorAccent"

            android:id="@+id/btn_how_to"
            style="@style/ButtonEffect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80FFFFFF"
            android:paddingLeft="16dp"
            android:text="Cara menggunakan" />

        <View
            android:background="@color/colorSoft"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_about_dev"
            android:paddingLeft="16dp"
            android:textColor="@color/colorAccent"
            android:background="#80FFFFFF"
            style="@style/ButtonEffect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tentang Pengembang"/>
        <View
            android:background="@color/colorSoft"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>



    </LinearLayout>


</RelativeLayout>